<Page x:Class="MainOfficeClient.Pages.Menus.MainOfficeAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainOfficeClient.Pages.Menus" 
      xmlns:uc="clr-namespace:ClientControlsLibrary;assembly=ClientControlsLibrary"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="MainOfficeAdmin" Loaded="Page_Loaded">

    <Grid Height="550">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <uc:MenuButton Text="Офіси" Grid.Column="0" Source="..\Images\Tables.png" Click="OpenOfficeList"/>
        <uc:MenuButton Text="Звіти" Grid.Column="1" Source="..\Images\Report.png" Click="OpenReportList"/>
        <uc:MenuButton Text="Статистика" Grid.Column="2" Source="..\Images\Stats.png" Click="OpenStatsList"/>


    </Grid>
</Page>
