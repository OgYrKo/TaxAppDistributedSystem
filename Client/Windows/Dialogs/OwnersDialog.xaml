            <ListView x:Name="Owners" ItemsSource="{Binding Path=contractorslands, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="250" Width="400" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
